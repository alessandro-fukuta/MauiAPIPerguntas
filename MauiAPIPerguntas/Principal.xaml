<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPIPerguntas.Principal"
             Title="Principal">

    <VerticalStackLayout Margin="10">
        <!-- COMENTARIOS NO XAML É IGUAL HTML -->
        <!-- TITULO -->
        <Label Text="API"
               FontSize="Title"
               HorizontalTextAlignment="Center"
               />
        <!-- LABEL DA PERGUNTA -->
        <Label 
            Text="PERGUNTAS E RESPOSTAS"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <!-- LAYOUT EM GRID -->
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Entry x:Name="txtPergunta"
                   Grid.Row="0"
                   Grid.Column="0"
                   Placeholder="Faça a Pergunta ?"
                   />

            <!-- BOTÃO DE ENVIAR -->
            <Button x:Name="btnEnviar"
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="+"
                    FontSize="Title"
                    Clicked="btnEnviar_Clicked"
                    />
        </Grid>

        <Label Text="" x:Name="lblResponse"
               HorizontalTextAlignment="Center"
        />
        
        <!--BOTAO DE BUSCAR AS PERGUNTAS FEITAS-->
        <Button x:Name="btnBuscar"
                Text="Buscar Perguntas"
                Clicked="btnBuscar_Clicked"
                Margin="80,0,80,0"
                />

        <!-- LISTA DE PERGUNTAS -->

        <ListView x:Name="lstPerguntas"
                  SelectionMode="Single"
                  Margin="10,20,10,0"
                  BackgroundColor="PapayaWhip"
                  RowHeight="80"
                  HeightRequest="500"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding id}" />
                            <Label Text="{Binding pergunta}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>
</ContentPage>